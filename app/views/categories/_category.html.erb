<%= link_to category_expenses_path(category), class:"text-dark", style:"text-decoration: none;" do %>
  <div class="card flex-row align-items-center p-3 my-3 rounded-0">
    <div class="card-image">
      <img src=<%= category.icon %> class="card-img-top" alt=<%= category.name %>>
    </div>
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h5 class="card-title"><%= category.name %></h5>
        <div class="card-icons">
          <%= link_to edit_category_path(category), class: "text-primary mr-2" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
        <p class="card-text"><strong>$<%= category.category_total_amount %></strong></p>
      </div>
      <p class="position-relative card-date"><%= category.updated_at.strftime('%A-%b-%Y | %H:%M:%S') %></p>
    </div>
  </div>
<% end %>