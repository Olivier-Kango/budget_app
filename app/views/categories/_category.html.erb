<%= link_to category_expenses_path(category), class:"text-dark", style:"text-decoration: none;" do %>
  <div class="card flex-row align-items-center p-3 my-3 rounded-0">
    <div class="card-image">
      <% if category.icon.present? %>
        <%= image_tag category.icon_url, class: "card-img-top", alt: category.name %>
      <% else %>
        <%= image_tag "default_icon.png", class: "card-img-top", alt: "Default Icon" %>
      <% end %>
    </div>
    <%# <div class="card-icons">
      <%= link_to edit_category_path(category), class: "text-primary mr-2" do %>
        <%# <i class="fa fa-edit"></i>
      <% end %>
      <%# <%= button_to category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger", remote: true do %>
        <%# <i class="fa fa-trash"></i>
      <% end %>   
    <%# </div> %>
    <div class="card-body">
      <h5 class="card-title"><%= category.name %></h5>
      <p class="card-text"><strong>$<%= category.category_total_amount %></strong></p>
      <p class="position-relative card-date"><%= category.updated_at.strftime('%A-%b-%Y | %H:%M:%S') %></p>
    </div>
  </div>
<% end %>
