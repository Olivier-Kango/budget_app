<div class="card p-3 my-3 rounded-0">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h5 class="card-title"><%= expense.name %></h5>
      <p class="card-text"><strong>$<%= expense.amount %></strong></p>
    </div>
    <p class="position-relative" style="top: 1em"><%= expense.updated_at.strftime('%A-%b-%Y | %H:%M:%S') %></p>
  </div>
</div>