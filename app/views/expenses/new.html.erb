<section>
  <h4 class="bg-primary text-center text-white pb-2">Add new expense</h4>
  <div class="container-fluid mt-3">
    <%= bootstrap_form_with model: expense, url: expenses_path do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, class:"rounded-0", hide_label: true, placeholder: "expense Name", required: true %>
      </div>

      <div class="field">
        <%= f.number_field :amount, autofocus: true, class:"rounded-0", hide_label: true, step: "any", placeholder: "$0.00", required: true %>
      </div>
      <div class="field">
        <%= f.select :product_id, @categories.collect {|product| [product.name, product.id]}, class:"rounded-0", hide_label: true, required: true%>
      </div>

      <div class="actions" style="margin-top: 5em">
        <%= f.submit "Save", class:"btn btn-primary rounded-0 w-100 position-absolute bottom-0 start-0" %>
      </div>
    <%end%>
  </div>
</section>
